<div class="container">
  <div class="row header">
    <h1>Burgers!</h1>
  </div>

  <ul>
    {{#each burger}}
    {{#unless devoured}}
    <div class="row">
      <div class="col">
        <p> {{this.burger_name}} </p>
      </div>
      <div class="col">
        <button class="devoured" index={{this.id}}>EAT</button>
      </div>
    </div>
    {{/unless}}
    {{/each}}
  </ul>

  <h3>Devoured Burgers</h3>
  <ul class="devouredlayout">
    {{#each burger}}
    {{#if devoured}}
    {{this.burger_name}}
    {{/if}}
    {{/each}}
  </ul>

  <h3>Add Burger</h3>
  <form class="create-form">

    <div class="form-group">
      <label for="burger-name">Burger Name:</label>
      <input type="text" id="burger-name" name="name">

    </div>

    <button id="addburger">Add Burger</button>
  </form>
</div>